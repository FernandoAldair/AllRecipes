<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.allrecipes.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registroFragment"
            app:destination="@id/registroFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.allrecipes.ui.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/recetaListFragment"
        android:name="com.example.allrecipes.ui.RecetaListFragment"
        android:label="fragment_receta_list"
        tools:layout="@layout/fragment_receta_list" >
        <action
            android:id="@+id/action_recetaListFragment_to_insertarRecetaFragment"
            app:destination="@id/insertarRecetaFragment" />
    </fragment>
    <fragment
        android:id="@+id/insertarRecetaFragment"
        android:name="com.example.allrecipes.ui.InsertarRecetaFragment"
        android:label="fragment_insertar_receta"
        tools:layout="@layout/fragment_insertar_receta" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.allrecipes.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registroFragment"
        android:name="com.example.allrecipes.RegistroFragment"
        android:label="fragment_registro"
        tools:layout="@layout/fragment_registro" />
    <fragment
        android:id="@+id/menuFragment2"
        android:name="com.example.allrecipes.MenuFragment"
        android:label="fragment_menu2"
        tools:layout="@layout/fragment_menu2" />
</navigation>